// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  uid   String @unique
  email String
}

model User {
  uid        String   @id @default(cuid())
  username   String   @unique
  password   String
  email      String   @unique
  profile    Profile?
  hours      Entry[]
  role       String   @default("normie")
  created_at DateTime @default(now())
}

model Profile {
  uid    String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [uid])
  userId String @unique
  name   String
}

model Entry {
  uid            String    @id @default(cuid())
  owner          User      @relation(fields: [userId], references: [uid])
  userId         String
  date           DateTime
  title          String
  location       Location  @relation(fields: [locationUid], references: [uid])
  locationUid    String
  other_location String?
  volunteers     Int
  hours          Float
  description    String
  created_at     DateTime  @default(now())
  keywords       Keyword[]
  trails         Trail[]
  photos         Photo[]
}

model Location {
  uid    String  @id @default(cuid())
  name   String  @unique
  slug   String  @unique
  trails Trail[]
  hours  Entry[]
}

model Trail {
  uid         String   @id @default(cuid())
  name        String
  slug        String
  entries     Entry[]
  location    Location @relation(fields: [locationUid], references: [uid])
  locationUid String
}

model Keyword {
  uid     String  @id @default(cuid())
  keyword String  @unique
  active  Boolean
  entries Entry[]
}

model Photo {
  uid      String @id @default(cuid())
  filename String
  entry    Entry  @relation(fields: [entryUid], references: [uid])
  entryUid String
}
